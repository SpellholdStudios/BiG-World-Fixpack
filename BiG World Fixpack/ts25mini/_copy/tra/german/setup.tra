@2200 = "Als Ihr den Schutzstein in die Hand nehmt, endet der Bannkreis um den Eingang und Ihr scheint hineingehen zu können."
@2201 = "Nachdem die Rakshasar-Wächter tot sind erlischt der Bannkreis um den Eingang zum Unterschlupf und es scheint, dass Ihr hineingehen könnt."
@2202 = "Um die Treppe zum Eingang erstreckt sich ein Bannkreis. Um hineingehen zu können ist offenbar ein Schutzstein oder etwas anderes, das den Bannkreis aufhebt, nötig."
@2203 = "Wie es aussieht, hat man das Inventar bereits komplett wegtransportiert. Wichtige Gegenstände gibt es hier wahrscheinlich keine mehr."
@2204 = "Der Durchgang ist leider durch einen Bannkreis gesichert. Es scheint, dass Ihr alle Gegner in diesem Raum besiegen müsst, bevor Ihr es verlassen könnt."
//@2205 = "Die Gruppe hat einen Gegenstand verloren."

@2300 = "Von irgendwo her kommt auf Euch unbekannte Art und Weise in großen Mengen Blut hereingeflossen."
@2301 = "Nachdem Ihr den Vampir zum ersten Mal besiegt habt, zog er sich in diesen Sarg zurück. Wenn Ihr einen Holzpfahl dabeihabt, könnt Ihr ihn jetzt wohl endgültig vernichten."
@2302 = "Ihr treibt den Holzpflock in das schmutzige Herz des Vampirs. Diese Bestie wird wohl niemandes Blut mehr trinken."
@2303 = "Das Unleben dieses Vampirs wurde vollständig beendet und der Sarg verbreitet einen Geruch von Verwesung. Ihr habt hier nichts mehr zu tun."
@2304 = "Ihr seid zu weit entfernt und könnt daher nichts machen."
@2305 = "Der Durchgang ist leider durch einen Bannkreis gesichert. Es scheint, dass Ihr alle Gegner in diesem Raum besiegen müsst, bevor Ihr es verlassen könnt."
@2306 = "Nachdem Ihr den Vampir vernichtet habt, hat sich ein an einen unbekannten Ort führendes Portal geöffnet."
@2307 = "Diese große Menge Blut kommt wahrscheinlich aus einem Becken, das sich auf der anderen Seite des Portals befindet. Wenn man dieses Becken reinigen würde, kann man den Blutstrom vielleicht anhalten."
@2308 = "Der Blutstrom ist jetzt versiegt."
@2309 = "Dies ist wohl die Quelle des in großer Menge hereinströmenden Blutes. Wenn man dieses Becken reinigen würde, kann man den Blutstrom vielleicht anhalten."
@2310 = "Nachdem Ihr elfisches Weihwasser in den Teich geschüttet habt, sieht man sofort die Wirkung. Innerhalb eines Augenblicks gab es ein heftiges Geblubber, danach waren, bevor man sich versah, das Böse beseitigt und das Becken gereinigt."
@2311 = "Das Becken ist nun gereinigt. Jetzt könnt Ihr den hier gefangenen Geistern der von den Vampiren Ermordeten sicherlich Ruhe schenken."
@2312 = "Ihr habt mich befreit! Herzlichen Dank!"
@2313 = "Hil... feee..."
@2314 = "Hier ist in Zeichen, die so klein sind, dass man sie fast nicht lesen kann, geritzt:
'Ihr seid verdrießlich und schlechter Laune geworden. Das ist in der Tat ausgezeichnet. Wenn Ihr irgendwann noch grausam werdet, ist das noch besser.' "
@2315 = "Nicht...!"
@2316 = "Das Becken ist nun gereinigt. Ihr habt nicht allen der hier gefangenen Geistern der von den Vampiren Ermordeten Ruhe schenken können, aber es gibt vielleicht noch einige, die Ihr retten könnt."

@2350 = "<CHARNAME>! Sterbt!!"
@2351 = "Eine Skulptur eines Lindwurms. Sie sieht einem echten Lindwurm täuschend ähnlich. Durch irgendeine magische Kraft schwebt sie über dem Boden."
@2352 = "Eine Skulptur eines Skelettkriegers. Ein durch irgendeine magische Kraft erzeugtes unheiliges Leuchten erweckt ein ungutes Gefühl."
@2353 = "Falle wurde aktiviert."
// Falle oder Hinterhalt???
@2354 = "Ein Alarm erklingt. Ihr seid wohl entdeckt worden."
@2355 = "Ein bestimmter Schlüssel scheint für dieses Portal nötig zu sein. Wenn Ihr diesen nicht besitzt, könnt Ihr es nicht passieren."
@2356 = "Ihr seid zu weit entfernt und könnt daher nichts machen."
@2357 = "Ihr spürt, wie die magische Kraft des Amuletts innerhalb eines Augenblicks euren Körper umhüllt. Wie es aussieht, konntet Ihr so in das Gebäude hineingehen."
@2358 = "Verschlossen."
@2359 = "Er zieht sich fluchtartig in die Kanalisation zurück. Um diese Uhrzeit seid Ihr leider entdeckt worden."
// Gruppe? Oder aktiv, Gegner???
@2360 = "Es sieht so aus, als hätte er etwas ausgewürgt."
@2361 = "So ist es gut!"
@2362 = "Was passiert?!?"
@2363 = "WAAAH!"
@2364 = "Es scheint so, dass das Ende der Treppe versperrt ist. Was Ihr auch probiert, Ihr könnt die Treppe im Moment nicht benutzen."
@2365 = "Es scheint so, als wäre das Ende verschlossen, als Ihr aber genauer nachseht, stellt Ihr fest, dass Ihr offenbar doch nach oben steigen könnt."
@2366 = "Ihr seid zu weit weg und könnt nicht viel erkennen."
@2367 = "Ein abstraktes Gemälde, auf dem blaue und gelbe Wirbel zu sehen sind."
@2368 = "Das ist wohl das gesuchte abstrakte Gemälde. Es sieht aus, als hätte jemand mit Blau und Gelb Wirbel gemalt. Wenn Ihr versuchen würdet, es abzuhängen, wäre dies wohl recht einfach."
@2369 = "Hier hängt das von euch ausgesuchte Bildnis des wilden Tempus."
@2370 = "Hier hängt das von euch ausgesuchte Bild eines hübschen Aktmodells."
@2371 = "Hier hängt das von euch ausgesuchte, Ruhe verbreitende Landschaftsgemälde."

